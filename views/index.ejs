<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    <h1>Home</h1>

    <h2 class="page-header">Search:</h2>
    <form action="/" method="GET">
        <div class="form-row">
            <div class="form-item">
                <label>Name</label>
                <input type="text" name="title" value="<%= searchOptions.title ? searchOptions.title : '' %>" />
            </div>
        </div>
        <div class="form-row form-row-end">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    <h1><a class="home-header" href="/games">Games:</a></h1>
    <ul class="subSection">
        <% games.forEach(gameItem => { %>
        <li>
            <h2>
                <a class="home-header" href="/games?title=<%= encodeURIComponent(gameItem.title) %>">
                    <%= gameItem.title %>
                </a>
            </h2>
            <p><%= gameItem.description %></p>
            <% if (gameItem.coverImageType && gameItem.coverImage) { %>
            <img src="data:<%= gameItem.coverImageType %>;base64,<%= gameItem.coverImage.toString('base64') %>" alt="<%= gameItem.title %> Cover Image">
            <% } %>
        </li>
        <% }) %>
    </ul>

    <h1><a class="home-header" href="/levels">Levels:</a></h1>
    <ul class="subSection">
        <% levels.forEach(levelItem => { %>
        <li>
            <h2>
                <a class="home-header" href="/levels?title=<%= encodeURIComponent(levelItem.title) %>">
                    <%= levelItem.title %>
                </a>
            </h2>
            <% if (levelItem.coverImageType && levelItem.coverImage) { %>
            <img src="data:<%= levelItem.coverImageType %>;base64,<%= levelItem.coverImage.toString('base64') %>" alt="<%= levelItem.title %> Cover Image">
            <% } %>
        </li>
        <% }) %>
    </ul>

    <h1><a class="home-header" href="/demons">Demons:</a></h1>
    <ul class="subSection">
        <% demons.forEach(demonItem => { %>
        <li>
            <h2>
                <a class="home-header" href="/demons?title=<%= encodeURIComponent(demonItem.title) %>">
                    <%= demonItem.title %>
                </a>
            </h2>
            <p class="subSection-description"><%= demonItem.description %></p>
            <% if (demonItem.coverImageType && demonItem.coverImage) { %>
            <img src="data:<%= demonItem.coverImageType %>;base64,<%= demonItem.coverImage.toString('base64') %>" alt="<%= demonItem.title %> Cover Image">
            <% } %>
        </li>
        <% }) %>
    </ul>

    <h1><a class="home-header" href="/source">Source Ports:</a></h1>
    <ul class="subSection">
        <% source.forEach(sourcePortItem => { %>
        <li>
            <h2>
                <a class="home-header" href="/source?title=<%= encodeURIComponent(sourcePortItem.title) %>">
                    <%= sourcePortItem.title %>
                </a>
            </h2>
            <p><%= sourcePortItem.description %></p>
            <% if (sourcePortItem.coverImageType && sourcePortItem.coverImage) { %>
            <img src="data:<%= sourcePortItem.coverImageType %>;base64,<%= sourcePortItem.coverImage.toString('base64') %>" alt="<%= sourcePortItem.title %> Cover Image">
            <% } %>
        </li>
        <% }) %>
    </ul>

    <h1><a class="home-header" href="/mods">Mods:</a></h1>
    <ul class="subSection">
        <% mods.forEach(modItem => { %>
        <li>
            <h2>
                <a class="home-header" href="/mods?title=<%= encodeURIComponent(modItem.title) %>">
                    <%= modItem.title %>
                </a>
            </h2>
            <p><%= modItem.description %></p>
            <p><strong>Requirements:</strong> <%= modItem.requirements %></p>
            <% if (modItem.coverImageType && modItem.coverImage) { %>
            <img src="data:<%= modItem.coverImageType %>;base64,<%= modItem.coverImage.toString('base64') %>" alt="<%= modItem.title %> Cover Image">
            <% } %>
        </li>
        <% }) %>
    </ul>
</body>

</html>

