<h1>Home</h1>
 <ul>
    <% games.forEach(gameItem => { %>
      <li>
        <h2><%= gameItem.title %></h2>
        <p><%= gameItem.description %></p>
        <% if (gameItem.coverImageType && gameItem.coverImage) { %>
          <img src="data:<%= gameItem.coverImageType %>;base64,<%= gameItem.coverImage.toString('base64') %>" alt="<%= gameItem.title %> Cover Image" style="width: 200px;">
        <% } %>
      </li>
    <% }) %>
  </ul>
